<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BoC</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />  @*@Styles.Render("~/Content/css")*@
    <link href="~/Content/Site.css" rel="stylesheet" />  @*@Styles.Render("~/Content/css")*@

    @*@Scripts.Render("~/bundles/modernizr")*@
    @*<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css"/>*@
    @*<link href="~/Content/datatables.min.css" rel="stylesheet" />*@
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/select/1.2.2/css/select.dataTables.min.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #92c83e">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    @*<span class="icon-bar"></span>*@
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Behaviors of Concern", "List", "Incident", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li @Html.Raw(ViewBag.Title == "List"?"class=\"active\"":"")>@Html.ActionLink("List", "List", "Incident")</li>
                    <li @Html.Raw(ViewBag.Title == "Edit"?"class=\"active\"":"")>@Html.ActionLink("Details", "Edit", "Incident")</li>
                    @*<li>@Html.ActionLink("Original Report", "Edit", "Incident")</li>*@
                    <li>@Html.ActionLink("About", "NewIncident", "Mock")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> <span id="sessionUserName">?</span></a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Behaviors of Concern</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.1.1.min.js"></script>  @*@Scripts.Render("~/bundles/jquery")*@
    <script src="~/Scripts/bootstrap.min.js"></script>  @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/Scripts/respond.min.js"></script>  @*@Scripts.Render("~/bundles/bootstrap")*@
    
    @*<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>*@
    @*<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>*@
    @*<script src="~/Scripts/datatables.min.js"></script>*@
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/select/1.2.2/js/dataTables.select.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
