@{
    ViewBag.Title = "List";
}

<div class="row content">
    <div class="col-sm-10" style="margin-top:5px;">
        @*<h4 class="text-center">Incident List</h4>*@
        <table id="incidentList" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th class="text-center">ID</th>
                    <th class="text-center">Incident Date</th>
                    <th class="text-center">Students Involved</th>
                    <th class="text-center">School</th>
                    <th class="text-center">Behavior Category</th>
                    <th class="text-center">Source</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Submission Date</th>
                </tr>
            </thead>
        </table>

        <form class="form-inline">
            <div class="form-group"><button type="submit" class="btn btn-primary">Open Incident</button></div>
            <div class="form-group"><button type="submit" class="btn btn-primary">New Incident</button></div>
        </form>
    </div>

    <div id="x_listFilters" class="col-sm-2 sidenav">@Html.Partial("IncidentFilters")</div>
</div>


@section scripts{
    <script>
        //ht tps://datatables.net/examples/ajax/orthogonal-data.html
        $(document).ready(function () {
            $('#incidentList').DataTable({
                "paging": true,
                "ordering": true,
                "info": true,
                "serverSide": true,
                "title": "JB List",

                "ajax": {
                    "url": "sampleData",
                    "type": "POST"
                },

                "columns": [
                    { data: "id" },
                    { data: "incidentDate" },
                    { data: "student" },
                    { data: "school" },
                    { data: "category" },
                    { data: "source" },
                    { data: "status" },
                    { data: "incidentDate" }
                ]
                
            });
        });
    </script>
}
